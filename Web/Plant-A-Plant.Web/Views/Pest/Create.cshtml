@model Plant_A_Plant.Web.ViewModels.Pests.CreatePestViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="container" style="background-color: lightblue">
    <h1 style="text-align: center">Add New Family</h1>
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input id="Plot" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuperFamily" class="control-label"></label>
                <input id="Plot" asp-for="SuperFamily" class="form-control" />
                <span asp-validation-for="SuperFamily" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShortDescription" class="control-label"></label>
                <textarea id="Plot" asp-for="ShortDescription" class="form-control"></textarea>
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input id="Plot" asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PestImgUrl" class="control-label"></label>
                <input id="Plot" asp-for="PestImgUrl" class="form-control" />
                <span asp-validation-for="PestImgUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>